{
    "name": "cscan",
    "displayName": "Cscan",
    "description": "Real-time code scanning and chat-based code assistance using Codestral.",
    "version": "0.1.7",
    "publisher": "jkcg-hobby",
    "engines": {
        "vscode": "^1.50.0"
    },
    "activationEvents": [
        "onCommand:cscan.scanCode",
        "onDidSaveTextDocument",
        "onDidChangeTextDocument",
        "onCommand:cscan.startChat"
    ],
    "main": "./out/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jkcg-learning/cscan"
    },
    "license": "MIT",
    "icon": "images/logo.png",
    "contributes": {
        "commands": [
            {
                "command": "cscan.scanCode",
                "title": "Scan Code with Cscan"
            },
            {
                "command": "cscan.startChat",
                "title": "Start Cscan Chat"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.50.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.32.0",
        "typescript": "^4.9.5",
        "@vscode/test-electron": "^2.4.1",
        "@eslint/config-array": "^0.17.0",
        "@eslint/object-schema": "^2.1.4"
    },
    "dependencies": {
        "@types/node": "^20.14.11",
        "axios": "^1.7.2",
        "dotenv": "^10.0.0",
        "undici-types": "^6.19.2",
        "lru-cache": "^7.14.2",
        "rimraf": "^4.0.0",
        "glob": "^9.3.3"
    }
}
